<div id="delete-account" class="settings-unit {{#isPanelOpen}}open{{/isPanelOpen}}">
  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Delete account{{/t}}</h2>
    </header>
    <button class="settings-button secondary-button settings-unit-loading" disabled>
      <div class="spinner spinner-settings-fetch"></div>
    </button>
    <button class="settings-button secondary-button settings-unit-toggle"
      data-href="settings/delete_account">{{#t}}Deleteâ€¦{{/t}}</button>
  </div>

  <div class="settings-unit-details">
    <div class="error"></div>

    <form novalidate>
      <p>{{#t}}Your Firefox Account gives you access to products and services that help keep your web experience secure, private, and productive.{{/t}}</p>

      <p>{{#t}}You currently use:{{/t}}</p>

        <ul class="account-summary-list">
          {{#subscriptions}}
            <li>
              {{productName}}
            </li>
          {{/subscriptions}}

          {{#clients}}
            {{#isWebSession}}
                <li class="{{deviceType}}"
                    {{#genericOS}}data-os="{{genericOS}}"{{/genericOS}}
                    data-name="{{name}}"
                    id="{{id}}">
                    <div class="client-name" title="{{title}}">{{title}}</div>
                </li>
            {{/isWebSession}}

            {{#isOAuthApp}}
                <li class="{{deviceType}}" data-name="{{name}}" id="{{id}}">
                  <div class="client-name" title="{{title}}">{{name}}</div>
                </li>
            {{/isOAuthApp}}

        {{/clients}}
      </ul>

      <div class="input-row">
        <input id="delete-account-permanent" type="checkbox" value="delete-account-permanent" />
        <label for="delete-account-permanent">{{#t}}Account deletion is permanent. My account cannot be reactivated.{{/t}}</label>
      </div>

      <div class="input-row">
        <input id="delete-account-lose-access" type="checkbox" value="delete-account-lose-access" />
        <label for="delete-account-lose-access">{{#t}}I will lose access to any Mozilla apps and services connected to my account. My subscriptions will be cancelled.{{/t}}</label>
      </div>

      <div class="input-row">
        <input id="delete-account-saved-info" type="checkbox" value="delete-account-saved-info" />
        <label for="delete-account-saved-info">{{#t}}I will lose any saved information within the Mozilla apps and services affiliated with my account.{{/t}}</label>
      </div>

      <div class="input-row password-row">
        <!-- add the autocomplete=off attribute - the user is deleting the account, they most likely don't want the password saved. -->
        <input type="password" class="password tooltip-above" id="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}" required autofocus autocomplete="off" />
      </div>

      <div class="button-row">
        <button type="submit" class="settings-button warning-button">{{#t}}Delete account{{/t}}</button>
        <button class="settings-button secondary-button cancel">{{#t}}Cancel{{/t}}</button>
      </div>

    </form>
  </div>
</div>
