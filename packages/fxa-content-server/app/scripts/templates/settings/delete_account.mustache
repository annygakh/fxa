<div id="delete-account" class="settings-unit">
  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Delete account{{/t}}</h2>
    </header>
    <button class="settings-button secondary-button settings-unit-toggle"
      data-href="settings/delete_account">{{#t}}Delete…{{/t}}</button>
  </div>

  <div class="settings-unit-details">
    <div class="error"></div>

    <form novalidate>
      <p>{{#t}}Your Firefox Account gives you access to products and services that help keep your web experience secure, private, and productive.{{/t}}</p>

      <p>{{#t}}You currently use:{{/t}}</p>

        <ul class="client-list button-row">
          {{clients}}
          {{#clients}}

            {{#isDevice}}
              <li class="client {{deviceType}} client-device {{#isCurrentSession}}client-current{{/isCurrentSession}}"
                {{#genericOS}}data-os="{{genericOS}}"{{/genericOS}}
                data-name="{{name}}"
                title="{{title}}"
                id="{{id}}">
                <div class="client-name">{{name}}</div>
                {{#isCurrentSession}}
                    <div class="device-current">{{#t}}Current device{{/t}}</div>
                {{/isCurrentSession}}
                {{^isCurrentSession}}
                    <div class="last-connected">{{lastAccessTimeFormatted}}</div>
                {{/isCurrentSession}}
                <button class="settings-button warning-button client-disconnect" data-id="{{id}}" data-type="{{clientType}}">{{#t}}Disconnect…{{/t}}</button>
              </li>
            {{/isDevice}}

            {{#isWebSession}}
                <li class="client {{deviceType}} client-webSession"
                    {{#genericOS}}data-os="{{genericOS}}"{{/genericOS}}
                    data-name="{{name}}"
                    id="{{id}}">
                    <div class="client-name" title="{{title}}">{{title}}</div>
                  {{#isCurrentSession}}
                    <div class="device-current">{{#t}}Current session{{/t}}</div>
                  {{/isCurrentSession}}
                  {{^isCurrentSession}}
                    <div class="last-connected">{{lastAccessTimeFormatted}}</div>
                  {{/isCurrentSession}}
                    <button class="settings-button warning-button client-disconnect" data-id="{{id}}" data-type="{{clientType}}">{{#t}}Disconnect{{/t}}</button>
                </li>
            {{/isWebSession}}

            {{#isOAuthApp}}
                <li class="client {{deviceType}} client-oAuthApp" data-name="{{name}}" id="{{id}}">
                  <div class="client-name" title="{{title}}">{{name}}</div>
                    <div class="last-connected">{{userAgent}} {{lastAccessTimeFormatted}}</div>
                  <button class="settings-button warning-button client-disconnect" data-id="{{id}}" data-type="{{clientType}}">{{#t}}Revoke{{/t}}</button>
                </li>
            {{/isOAuthApp}}

        {{/clients}}
      </ul>

      <div class="input-row password-row">
        <!-- add the autocomplete=off attribute - the user is deleting the account, they most likely don't want the password saved. -->
        <input type="password" class="password tooltip-above" id="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}" required autofocus autocomplete="off" />
      </div>

      <div class="button-row">
        <button type="submit" class="settings-button warning-button">{{#t}}Delete account{{/t}}</button>
        <button class="settings-button secondary-button cancel">{{#t}}Cancel{{/t}}</button>
      </div>

    </form>
  </div>
</div>
