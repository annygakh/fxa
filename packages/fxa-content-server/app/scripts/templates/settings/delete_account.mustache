<div id="delete-account" class="settings-unit {{#isPanelOpen}}open{{/isPanelOpen}}">
  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Delete account{{/t}}</h2>
    </header>
    <button class="settings-button secondary-button settings-unit-loading" disabled>
      <div class="spinner spinner-settings-fetch"></div>
    </button>
    <button class="settings-button secondary-button settings-unit-toggle"
      data-href="settings/delete_account">{{#t}}Deleteâ€¦{{/t}}</button>
  </div>

  <div class="settings-unit-details">
    <div class="error"></div>

    <form novalidate>
      <p>{{#t}}You've connected your Firefox account to Mozilla products that keep you secure and productive on the web:{{/t}}</p>

        <ul class="delete-account-summary-list">
          {{#subscriptions}}
            <li>
              {{productName}}
            </li>
          {{/subscriptions}}

          {{#clients}}
            {{#isWebSession}}
                <li class="{{deviceType}}"
                    {{#genericOS}}data-os="{{genericOS}}"{{/genericOS}}
                    data-name="{{name}}"
                    id="{{id}}">
                    <div class="client-name" title="{{title}}">{{title}}</div>
                </li>
            {{/isWebSession}}

            {{#isOAuthApp}}
                <li class="{{deviceType}}" data-name="{{name}}" id="{{id}}">
                  <div class="client-name" title="{{title}}">{{name}}</div>
                </li>
            {{/isOAuthApp}}

        {{/clients}}
      </ul>

      <p>{{#t}}Please acknowledge that by deleting your account:{{/t}}</p>

      <ul class="delete-account-checkbox-list">
        <li class='delete-account-checkbox-list-item'>
          <input id="delete-account-permanent" type="checkbox" value="delete-account-permanent" class="delete-account-checkbox" />
          <label for="delete-account-permanent">{{#t}}Any subscriptions you have will be cancelled{{/t}}</label>
        </li>

        <li class='delete-account-checkbox-list-item'>
          <input id="delete-account-lose-access" type="checkbox" value="delete-account-lose-access" class="delete-account-checkbox" />
          <label for="delete-account-lose-access">{{#t}}You may lose saved information and features within Mozilla products{{/t}}</label>
        </li>

        <li class='delete-account-checkbox-list-item'>
          <input id="delete-account-saved-info" type="checkbox" value="delete-account-saved-info" class="delete-account-checkbox" />
          <label for="delete-account-saved-info">{{#t}}Reactivating with this email may not restore your saved information{{/t}}</label>
        </li>
      </ul>

      <div class="input-row password-row">
        <!-- add the autocomplete=off attribute - the user is deleting the account, they most likely don't want the password saved. -->
        <input type="password" class="password tooltip-above" id="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}" required autofocus autocomplete="off" />
      </div>

      <div class="button-row">
        <button type="submit" class="settings-button warning-button delete-account-button" disabled>{{#t}}Delete account{{/t}}</button>
        <button class="settings-button secondary-button cancel">{{#t}}Cancel{{/t}}</button>
      </div>

    </form>
  </div>
</div>
